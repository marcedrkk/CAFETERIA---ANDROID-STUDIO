<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="#815F4C"
        android:fontFamily="@font/bungee"
        android:paddingBottom="8dp"
        android:text="sPasaporteCafe"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#F0E1CD"
        android:drawablePadding="8dp"
        android:fontFamily="@font/bungee"
        android:text="Sucursales mas visitadas"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#5D4037"
        android:textColorHint="#A1887F"
        app:layout_constraintTop_toBottomOf="@+id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>



        <HorizontalScrollView
            android:id="@+id/hsvSucursales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
            android:layout_marginVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Cada tarjeta -->
                <include layout="@layout/item_resenas" />
                <include layout="@layout/item_resenas" />
                <include layout="@layout/item_resenas" />

            </LinearLayout>
        </HorizontalScrollView>

    <TextView
        android:id="@+id/tvCanjes"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#F0E1CD"
        android:drawablePadding="8dp"
        android:fontFamily="@font/bungee"
        android:text="Proximos beneficios"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#5D4037"
        android:textColorHint="#A1887F"
        app:layout_constraintTop_toBottomOf="@+id/hsvSucursales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>



    <HorizontalScrollView
        android:id="@+id/hsvCanjes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvCanjes"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cada tarjeta -->
            <include layout="@layout/item_producto" />
            <include layout="@layout/item_producto" />
            <include layout="@layout/item_producto" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvBeneficios"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#F0E1CD"
        android:drawablePadding="8dp"
        android:fontFamily="@font/bungee"
        android:text="Canjes mas recientes"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#5D4037"
        android:textColorHint="#A1887F"
        app:layout_constraintTop_toBottomOf="@+id/hsvCanjes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvBeneficios"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cada tarjeta -->
            <include layout="@layout/item_beneficio" />
            <include layout="@layout/item_beneficio" />
            <include layout="@layout/item_beneficio" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>