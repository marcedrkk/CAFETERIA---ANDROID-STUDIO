<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <!-- aqui se agregara tambien el cliente que hara la valoracion, en base a su nombre de usuario con el que se haya registrado
       se hara mas adelante.-->
       <LinearLayout
           android:orientation="vertical"
           android:padding="12dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tvOpinion"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Opinión"
               android:textSize="16sp"
               android:textStyle="bold" />

           <RatingBar
               android:id="@+id/ratingGeneral"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:numStars="5"
               android:stepSize="1.0"
               android:isIndicator="true" />

           <TextView
               android:id="@+id/tvDetalle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Atención: 0 | Comida: 0 | Ambiente: 0"
               android:textSize="14sp"
               android:layout_marginTop="4dp" />

           <ImageView
               android:id="@+id/imgFoto"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:scaleType="centerCrop"
               android:layout_marginTop="8dp" />

           <TextView
               android:id="@+id/tvFecha"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Fecha"
               android:textSize="12sp"
               android:layout_marginTop="4dp" />
       </LinearLayout>
   </androidx.cardview.widget.CardView>
